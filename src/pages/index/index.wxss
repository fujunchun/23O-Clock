/**index.wxss**/
.player {
  background-color: #FEFCFD;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  position: relative;
}

.box{
      width: 200rpx;
      height: 200rpx;
      position: absolute;
      top: 50%;
      left: 50%;
      margin: -100rpx 0 0 -100rpx;
      background-color: #ccc;
      border-radius: 50%;
  }
    
    
  .clip{
      width: 200rpx;
      height: 200rpx;
      position: absolute;
      border: 10rpx solid #ccc;
      border-radius: 50%;
      clip: rect(0, 200rpx, 200rpx, 100rpx);
  }
  .left{
      width: 200rpx;
      height: 200rpx;
      position: absolute;
      border: 10rpx solid lightblue;
      border-radius: 50%;
      clip: rect(0 100rpx 200rpx 0);
      top: -10rpx;
      left: -10rpx;
  }
  .right{
      width: 200rpx;
      height: 200rpx;
      position: absolute;
      border: 10rpx solid lightblue;
      border-radius: 50%;
      clip: rect(0 200rpx 200rpx 100rpx);
      top: -10rpx;
      left: -10rpx;
  }
  .width-none{
      width: 0;
  }
  .auto{
      clip: auto;
  }